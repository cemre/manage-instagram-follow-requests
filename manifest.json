{
  "name": "Manage Instagram Follow Requests",
  "description": "Manage your Instagram follow requests.",
  "version": "1.0.0",
  "author": {
    "name": "Cemre Gungor",
    "email": "projects@cem.re",
    "url": "https://cem.re/"
  },
  "permissions": ["scripting"],
  "host_permissions": ["https://*.instagram.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_title": "Manage Instagram Followe Requests"
  },
  "web_accessible_resources": [
    {
      "resources": ["script.js", "html.css"],
      "matches": ["https://*.instagram.com/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://*.instagram.com/*"],
      "js": ["script.js"]
    }
  ],
  "manifest_version": 3
}
